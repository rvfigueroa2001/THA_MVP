      <script>
        (function(){
          const form = document.getElementById('rentalAppForm');
          form.addEventListener('submit', function(e){
            e.preventDefault();
            alert('Application submitted! You can also download a copy. A partner organization will follow up if you qualify.');
          });
          document.getElementById('downloadDraft').addEventListener('click', ()=>{
            const data = Object.fromEntries(new FormData(form).entries());
            const blob = new Blob([JSON.stringify(data, null, 2)], {type: 'application/json'});
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url; a.download = 'rental-assistance-application.json';
            document.body.appendChild(a); a.click(); a.remove();
            URL.revokeObjectURL(url);
          });
        })();
      </script>
    </body>
    </html>
  </template>

  <script>
    document.getElementById('year').textContent = new Date().getFullYear();

    // Open the Rental Assistance form in a brand-new tab and render the template content there.
    const openBtn = document.getElementById('open-rental-form-btn');
const tpl = document.getElementById('rental-form-template');
openBtn.addEventListener('click', function(ev){
  ev.preventDefault(); // avoid default nav that can cause about:blank
  const w = window.open('about:blank', '_blank');
  if(!w){
    alert('Please allow pop-ups for this site to open the application form.');
    return;
  }
  const html = tpl.innerHTML;
  w.document.open();
  w.document.write(html);
  w.document.close();
});
  </script>
</body>
</html>

